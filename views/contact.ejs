<%- include("partials/header"); -%>
<style>
/* Reset some basic styles */
body, html {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  background-color: #f9f9f9;
  color: #333;
  height: 100%;
}

/* Main container */
main {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh; /* Full viewport height */
}

/* Contact section */
.contact {
  background-color: #fff;
  padding: 30px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  width: 400px; /* Fixed width for a clean layout */
  text-align: center;
  margin-bottom: 10rem;
}

.contact h2 {
  font-size: 24px;
  color: #4CAF50; /* Greenish heading */
  margin-bottom: 15px;
}

.contact p {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
}

/* Form input styling */
form label {
  display: block;
  text-align: left;
  font-weight: bold;
  margin-bottom: 5px;
  color: #555;
}

form input,
form textarea {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 5px;
  box-sizing: border-box;
  font-size: 14px;
}

form textarea {
  resize: none; /* Disable resizing of the textarea */
}

/* Button styling */
form button {
  width: 100%;
  padding: 12px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

form button:hover {
  background-color: #45a049; /* Darken green on hover */
}

/* Small screen responsiveness */
@media (max-width: 500px) {
  .contact {
    width: 90%; /* Make it more responsive on smaller screens */
  }
}

</style>
<main >
  <section class="contact contact-default" id="contact">
    <h2>
      Contact Us
    </h2>
    <p>
      If you have any questions or concerns, please don't hesitate to contact
      us. You can reach us by filling out the form below:
    </p>

    <form action="/contact" method="post">
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        id="name"
        required
      
      />

      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        id="email"
        required

      />

      <label for="message">Message:</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        id="message"
        required

      ></textarea>

      <button
        type="submit"
        id="send_button"

      >
        Send Message
      </button>
    </form>
  </section>
</main>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://smtpjs.com/v3/smtp.js"></script>
<script>
  var btn = document.getElementById("send_button");
  btn.addEventListener("click", function (e) {
    var name = document.getElementById("name").value;
    var email = document.getElementById("email").value;
    var message = document.getElementById("message").value;
    e.preventDefault();
    Email.send({
      Host: "smtp.elasticemail.com",
      // Please create account on 
      // https://app.elasticemail.com/api/create-account?_gl=1%2Ad8ieqx%2A_up%2AMQ..%2A_ga%2AMTczMDgzODM4NS4xNzEwNjg0OTY4%2A_ga_9GFVDHZ5M5%2AMTcxMDY4NDk2Ni4xLjAuMTcxMDY4NDk2Ni4wLjAuMA..&r=20b444a2-b3af-4eb8-bae7-911f6097521c
      // and get a username and password. Add them here to allow recieval of emails 
      Username: "username_smtp",
      Password: "generate_from_smtp_server",


      To: "kritikagupta3003@gmail.com",
      From: `${email}`,
      Subject: `Blog Website Issue By: ${name}`,
      Body: `<br><br> ${message} <br><br> <strong>Name:<\strong> ${name} <br> <strong>Email:<\strong> ${email}`,
    })
      .then(async (message) => {
        if (message == "OK") {
          await Swal.fire({
            title: "Success!",
            text: "Message Sent Successfully!",
            icon: "success",
            background: "#1A1A1A",
            color: "#fff",
            customClass: "swal-size-sm",
          });
        } else {
          await Swal.fire({
            icon: "error",
            title: "Oops...",
            text: "Something went wrong!",
            background: "#1A1A1A",
            color: "#fff",
            customClass: "swal-size-sm",
          });
        }
      })
      .then(async (res) => {
        await window.location.reload();
      });
  });
</script>
